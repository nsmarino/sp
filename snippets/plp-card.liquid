<a href="{{ product.url }}" class="card">
    <div class="card-image-wrapper">
      <img class="card-img" src="{{ product.featured_media | image_url }}" alt="{{ product.title }}">
    </div>

    <div class="card-caption">
      <div>
        <p class="headline m">{{ product.title }}</p>
        <p class="card-subtitle xs">
          {%- if product.metafields.custom_fields.subtitle -%}
          {{ product.metafields.custom_fields.subtitle }}
          {%- else -%}
          Sweet Pickle Books
          {%- endif -%}
        </p>        
      </div>
  
      <p class="price">{{product.price | money_without_trailing_zeros }}</p>
    </div>
  </a>
  <style>
  
  .card-caption {
    display: flex;
    justify-content: space-between;
  }

  .card-subtitle {
    font-family: var(--mono);
    line-height: .6;
  }
  
  .price {
    font-family: var(--serif);
    font-style: italic;
    font-size: 150%;
    font-weight: bold;
    margin: 0;
  }
  
  </style>